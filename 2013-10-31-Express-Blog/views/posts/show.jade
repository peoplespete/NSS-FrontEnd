extends ../template/layout

block content
  .row
    .small-12.columns
      h1.subheader #{post.title} Post
  .row
    .small-3.columns
      a.button.expand.tiny.radius(href='/') Home
    .small-3.columns
      a.button.expand.tiny.radius(href='/posts') Posts
    .small-3.columns
      a.button.expand.tiny.radius.success(href='/posts/new') New Post
    .small-3.columns
  .row
    .small-12.columns
      h3.subheader= post.title
      h5.subheader By: #{post.author} on #{post.date}
      img(src=post.image)
      p= post.content
      span Tags: #{post.tags}