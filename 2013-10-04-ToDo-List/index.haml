!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %title Template
    %link{rel: 'stylesheet', href: 'css/normalize.css'}
    %link{rel: 'stylesheet', href: 'css/style.css'}
  %body
    #input
      %h1 To Do
      %input#dueDate{type:'text',placeholder:'Due Date (12/05/13)'}
      %input#task{type:'text',placeholder:'Task (Build barn)'}
      %input#color{type:'text',placeholder:'Color (#22bbff)'}
      %input#addTask{type:'button',value:'Add Task'}

    #tasklist
      %table
        %tr.header
          %th Due Date
          %th Task
          %th Color
          %th Done?
          %th Remove?
          %th Up/Down

    %script{src: 'js/jquery-1.10.2.min.js'}
    %script{src: 'js/underscore-min.js'}
    %script{src: 'js/main.js'}


