.row
  .small-2.columns
    %input#productName{type:'text', placeholder:'name'}
  .small-2.columns
    %input#productImage{type:'text', placeholder:'how to find image'}
  .small-2.columns
    %input#productWeight{type:'text', placeholder:'weight'}
  .small-2.columns
    %input#productPrice{type:'text', placeholder:'price'}
  .small-2.columns
    %input#productPercentOff{type:'text', placeholder:'%off'}
  .small-2.columns
    %input#addProduct{type:'button', value:'Add Product'}
.row
  .small-12.columns
    %table#products
      %tr.header
        %th Name
        %th Image
        %th Weight
        %th Price
        %th Percent Off
        %th Sale Price
    #buttons
      %img#previous{src:'img/previous.jpg'}
      %img#next{src:'img/next.jpeg'}


