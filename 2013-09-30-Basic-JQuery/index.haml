%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %title Template
    %link{rel: 'stylesheet', href: 'css/normalize.css'}
    %link{rel: 'stylesheet', href: 'css/style.css'}
  %body
    / = Haml::Engine.new(File.read('haml/_header.haml')).render
    / = Haml::Engine.new(File.read('haml/_nav.haml')).render
    / = Haml::Engine.new(File.read('haml/_content.haml')).render
    / = Haml::Engine.new(File.read('haml/_footer.haml')).render
    %input#name{type:'text', placeholder:'Enter your name:'}
    %input#color{type:'text', placeholder:'Enter your color:'}
    %input#clicker{type:'button', value:'Press Me'}

    #a Divvy A
    #b Divvy B
    #c Divvy C

    %input#age{type:'text', placeholder:'Enter your age:'}
    %input#age_clicker{type:'button', value:'Wanna Drink?'}


    %script{src: 'js/jquery-1.10.2.min.js'}
    %script{src: 'js/underscore-min.js'}
    %script{src: 'js/main.js'}


