table#todos
  thead: tr
    th Title
    th Due Date
    th Priority
    th
  tbody
    each todo in todos
      tr(style='background-color:#{todo.priority.color};')
        td= todo.title
        td= todo.dueDate
        td= todo.priority.name
        td
          form(action='/todos/#{todo.id}', method='post')
            input(type='hidden',name='_method', value='delete')
            button.alert(type='submit') Delete