#left
  #map-canvas
#right
  .row
    .small-12.columns
      %h4 Vacation Map
  .row
    .small-6.columns
      %input#zoom{type:'text',placeholder:'1-18',autofocus:true}
    .small-6.columns
      %input#setZoom.button.radius.small{type:'button',value:'Set Zoom'}
  .row
    .small-6.columns
      %input#location{type:'text',placeholder:'Paris, France'}
    .small-6.columns
      %input#addLocation.button.radius.small.success{type:'button',value:'Add Location'}
  .row
    .small-8.columns
      %select#selectLocation
        %option Select a Location
    .small-4.columns
      %input#showLocation.button.radius.small.alert{type:'button',value:'Show'}
