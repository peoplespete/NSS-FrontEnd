extends ../template/layout

block content
  #content
    .row
      .small-12.columns
        h3.subheader Collections Page
    .row
      .small-12.columns
        #songs
          each song in songs
            .song
              h3= song.title
              audio(src='/audios/#{song.filename}', controls=true)
              a(href='/songs/#{song.id}')
                img(src=song.art)
              p= song.duration
              p= song.lyrics
              p= song.createdAt
              ul
                each genre in song.genres
                  li= genre.name
