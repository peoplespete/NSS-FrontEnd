extends ../template/layout
include ../mixins/form-helper

block content
  #content
    .row
      .small-12.columns
        h3.subheader New Song Page
    .row
      .small-12.columns
        include ../template/errors
    .row
      .small-12.columns
        form(action='/songs', method='post')
          fieldset
            legend New Entry
            .row
              mixin field(4, 'title', 'Title', null, null, true)
              mixin field(4, 'duration', 'Duration (sec)')
              mixin field(4, 'art', 'Song Image')
            .row
              mixin field(2, 'filename', 'Filename')
              .small-10.columns
                label(name='lyrics') Lyrics:
                textarea#lyrics(name='lyrics')
            .row
              .small-12.columns
                if genres
                  each genre in genres
                    input(type='checkbox', name='genres', value= genre.id)= genre.name
                    span= genre.name


            .row
              .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/songs') Cancel
              .small-2.columns: button.radius.success.small.expand(type='submit') Save Song
              .small-8.columns

